<!DOCTYPE html>
<html>
<head>
    <title>devweb-shortener</title>
</head>
<body>
    <h1>devweb-shortener</h1>
    <p>There are <%= count %> links</p>
    <h2>Add a new link</h2>
    <form method="post" action="/api-v2/" id="submit-link">
        <label for="url">Type the URL to shorten</label>
        <input name="url" id="url" type="url" placeholder="https://perdu.com" />
        <button type="submit">Submit</button>
    </form>
    <% if (typeof short !== 'undefined' && short) { %>
        <p>Short link created: <a href="<%= shortUrl %>"><%= shortUrl %></a></p>
    <% } %>
    
</body>
</html>